<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:oops="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sixosix.gesmana.FloatingItem
        android:id="@+id/fi_gesture_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        oops:leftText="@string/floating_switch"
        oops:rightStyle="iconSwitch"/>

    <LinearLayout
        android:id="@+id/ll_gesture_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sixosix.gesmana.FloatingItem
            android:id="@+id/fi_add_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            oops:leftText="添加应用"
            oops:rightText="为应用设置打开手势" />
    </LinearLayout>


</LinearLayout>